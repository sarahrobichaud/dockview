{
	"name": "backend",
	"scripts": {
		"build": "tsc && tsc-alias && npm run build:copy-views && npm run build:css && npm run build:client-script",
		"build:copy-views": "cp -r src/views dist/.",
		"build:css": "npx tailwindcss -i tw.css -o ./public/styles.css",
		"build:client-script": "esbuild src/scripts/client.js --bundle --outfile=public/dockview-client.js",
		"start": "node dist/server.js",
		"dev": "tsx watch ./src/server.ts",
		"dev:css": "npx tailwindcss -i tw.css -o ./public/styles.css --watch",
		"types:generate-public": "dts-bundle-generator --project ./tsconfig.api.json -o ./dockview-api.d.ts src/types/public/public-api.ts",
		"types:generate-ws": "dts-bundle-generator --project ./tsconfig.api.json -o ./dockview-ws-lib.d.ts src/types/public/ws-lib.ts"
	},
	"type": "module",
	"dependencies": {
		"@dockview/ws": "workspace:^",
		"chalk": "^5.3.0",
		"dockview-ws": "file:../dockview-ws",
		"ejs": "^3.1.10",
		"express": "^4.21.0",
		"http-proxy": "^1.18.1",
		"morgan": "^1.10.0",
		"nanoid": "^5.0.7",
		"semver": "^7.6.3",
		"tsc-alias": "^1.8.10",
		"vhost": "^3.0.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/http-proxy": "^1.17.15",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.5.5",
		"@types/semver": "^7.5.8",
		"@types/vhost": "^3.0.9",
		"@types/ws": "^8.5.12",
		"autoprefixer": "^10.4.20",
		"dts-bundle-generator": "^9.5.1",
		"postcss": "^8.4.45",
		"tailwindcss": "^3.4.11",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2"
	}
}
