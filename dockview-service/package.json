{
  "scripts": {
    "build": "tsc && npm run build:copy-views && npm run build:css && npm run build:client-script",
    "build:copy-views": "cp -r src/views dist/.",
    "build:css": "npx tailwindcss -i tw.css -o ./public/styles.css",
    "build:client-script": "esbuild src/scripts/client.js --bundle --outfile=public/dockview-client.js",
    "start": "node dist/server.js",
    "dev": "tsx watch ./src/server.ts",
    "dev:css": "npx tailwindcss -i tw.css -o ./public/styles.css --watch"
  },
  "type": "module",
  "dependencies": {
    "chalk": "^5.3.0",
    "dockview-ws": "file:../dockview-ws",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.11",
    "tsx": "^4.19.1"
  }
}
